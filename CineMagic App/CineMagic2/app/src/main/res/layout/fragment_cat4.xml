<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cat4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Cat4"
        android:gravity="center"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="134dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_background">

            <ImageView
                android:id="@+id/sehezada"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/sehezada" />

            <TextView
                android:id="@+id/sehezadaText"
                android:layout_width="150dp"
                android:layout_height="28dp"
                android:layout_alignBottom="@+id/sehezada"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="75dp"
                android:layout_toEndOf="@+id/sehezada"
                android:text="Sehezada"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bookButtonsehezada"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignTop="@+id/sehezada"
                android:layout_alignBottom="@+id/sehezada"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="-4dp"
                android:backgroundTint="@color/blue"
                android:text="Book Now"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/languagesehezada"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignStart="@+id/sehezadaText"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="65dp"
                android:text="U/A-Hindi"
                android:textColor="@color/light_grey"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/languagesehezada"
                android:layout_alignBottom="@+id/sehezada"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="41dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/white"
                android:text="2D"
                android:textSize="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="134dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_background">

            <ImageView
                android:id="@+id/dilwale"
                android:layout_width="80dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/dilwale" />

            <TextView
                android:id="@+id/dilwaleText"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_alignBottom="@+id/dilwale"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="76dp"
                android:layout_toEndOf="@+id/dilwale"
                android:text="Dilwale"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/bookDilwale"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignTop="@+id/dilwale"
                android:layout_alignBottom="@+id/dilwale"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="-4dp"
                android:backgroundTint="@color/blue"
                android:text="Book Now"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/languageDilwale"
                android:layout_width="wrap_content"
                android:layout_height="21dp"
                android:layout_alignStart="@+id/dilwaleText"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="65dp"
                android:text="U/A-Hindi"
                android:textColor="@color/light_grey"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView70"
                android:layout_width="30dp"

                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/languageDilwale"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="1dp"
                android:layout_marginBottom="45dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="2D"
                android:textSize="10dp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>
</ScrollView>